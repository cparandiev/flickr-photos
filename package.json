{
  "name": "flickr-photos",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "connected-react-router": "6.3.2",
    "history": "4.9.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "6.0.1",
    "react-router": "5.0.0",
    "react-scripts": "2.1.8",
    "redux": "4.0.1",
    "redux-devtools-extension": "2.13.8"
  },
  "scripts": {
    "start": "npm-run-all -p watch-css start-js",
    "start-js": "rimraf ./build && react-scripts start",
    "build": "npm run build-css && react-scripts build",
    "build-css": "node-sass --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "quotes": [
        2,
        "single"
      ],
      "max-len": [
        "error",
        {
          "code": 120,
          "ignoreTrailingComments": true,
          "ignoreComments": true
        }
      ],
      "spaced-comment": [
        2,
        "always"
      ],
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "no-magic-numbers": 1,
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "node-sass": "4.11.0",
    "npm-run-all": "4.1.5",
    "rimraf": "2.6.3"
  }
}
